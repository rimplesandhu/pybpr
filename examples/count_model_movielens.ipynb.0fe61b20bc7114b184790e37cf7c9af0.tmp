def compute_dcg(seq):
    return sum((
        (score / (math.log(i + 1)))
        for i, score in seq))

def compute_ndcg(seq):
    dcg = compute_dcg(sorted((predicted for predicted, actual in seq), reverse=True))
    idcg = compute_dcg(sorted((actual for predicted, actual in seq), reverse=True))
    return dcg / idcg

